<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

<p><%= f.label :title %>
  <%= f.text_field :title %></p>

  <p><%= f.label :artist_name %>
  <%= f.text_field :artist_name %></p>

  <p><%= f.label :song_notes_1 %>
  <input name="song[note_contents][]" id="song_notes_1" size="50"></p>

  <p><%= f.label :song_notes_2 %>
  <input name="song[note_contents][]" id="song_notes_2" size="50"></p>

  <p><%= f.label :song_notes_3 %>
  <input name="song[note_contents][]" id="song_notes_3" size="50"></p>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>


  <br />

  <%= f.submit %>
<% end %>


